# Supabase Configuration
# Get these from https://app.supabase.com/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend API
# Local development uses localhost, production should use your deployed API URL
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Sentry (Optional)
# Get this from https://sentry.io after creating a project
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Use * for development, specify domain for production
CORS_ORIGIN=*

# Supabase Configuration (Server-side)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# JWT Configuration (optional, Supabase handles JWT)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
